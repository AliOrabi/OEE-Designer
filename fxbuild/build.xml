	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="OEE-Designer.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="OEE Apps"
			mainClass="org.point85.app.OeeApplication"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/oee-apps-1.0.0.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Point85"/>
				<attribute name="Implementation-Title" value="OEE Apps"/>
				<attribute name="Implementation-Version" value="1.0.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
	
		<fx:csstobin outdir="build/classes">
			<fileset dir="build/classes" includes="**/*.css"/>
		</fx:csstobin>
	
	</target>
		
		<!-- build in-process collector -->
		<target name="build-collector">
			<jar destfile="${dist.dir}/libs/oee-collector-1.0.0.jar" basedir="build/classes" includes="**/InProcessCollector.class" />
		</target>
		
		<!-- Stage files for zip -->
		<target name="stage">			
			<!-- copy wrapper files -->
			<copy todir="${dist.dir}">
				<fileset dir="${basedir}/wrapper">
					<include name="**/*" />
				</fileset>
			</copy>
			
			<copy file="${basedir}/log4j.properties" todir="${dist.dir}"/>
			<copy file="${basedir}/run-designer-app.bat" todir="${dist.dir}"/>
			<copy file="${basedir}/run-monitor-app.bat" todir="${dist.dir}"/>
			<copy file="${basedir}/run-collector-app.bat" todir="${dist.dir}"/>
		</target>
		
		<!-- Zip files -->
		<target name="zip" depends = "stage">

			
			<zip destfile="${archive.dir}/oee-apps.zip" basedir="${dist.dir}/"/>
		</target>		
